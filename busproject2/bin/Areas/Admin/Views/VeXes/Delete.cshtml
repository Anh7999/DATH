@model busproject2.Models.VeXe

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_MyLayout.cshtml";
}


<h2>Xóa Vé Xe</h2>
<h3>Bạn Có Chắc Chắn Xóa Vé Xe Này?</h3>
<div class="row">
    <div class="col-lg-12">
        <div class="ibox ">
            <div class="ibox-content">

                <form method="get" style="margin-left:350px">
                    <div class="form-group  row">
                        <dt>
                            Loại Vé
                        </dt>

                        <div class="col-sm-10" style="margin-left:60px">
                            @Html.DisplayFor(model => model.LoaiVe)
                        </div>
                    </div>

                    <div class="form-group row">

                        <dt>Giá Vé</dt>

                        <div class="col-sm-10" style="margin-left:10px">
                            @Html.DisplayFor(model => model.Gia)
                        </div>
                    </div>

                    
                </form>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">


                        <div class="col-sm-4 col-sm-offset-2">
                            <button class="btn btn-danger btn-sm" type="submit">Xóa  </button>
                            <button class="btn btn-white btn-sm" type="submit">@Html.ActionLink("Quay Lại", "Index")</button>
                        </div>
                    </div>
                }

            </div>

        </div>

    </div>
</div>