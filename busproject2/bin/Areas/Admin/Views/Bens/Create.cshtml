@model busproject2.Models.Ben

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_MyLayout.cshtml";
}



<h2>Thêm Mới Bến Xe</h2>
<div class="row">
    <div class="col-lg-12">
        <div class="ibox ">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="ibox-content">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <form method="get">
                        <div class="form-group  row">
                            <label class="col-sm-2 col-form-label">Tên Bến</label>

                            <div class="col-sm-10">
                                @Html.EditorFor(model => model.TenBen, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.TenBen, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="hr-line-dashed"></div>
                        <div class="form-group  row">
                            <label class="col-sm-2 col-form-label">Lat</label>

                            <div class="col-sm-10">
                                @Html.EditorFor(model => model.lat, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.lat, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="hr-line-dashed"></div>
                        <div class="form-group  row">
                            <label class="col-sm-2 col-form-label">Long</label>

                            <div class="col-sm-10">
                                @Html.EditorFor(model => model._long, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model._long, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="hr-line-dashed"></div>
                    </form>
                    <div class="form-group row">
                        <div class="col-sm-4 col-sm-offset-2">
                            <button class="btn btn-white btn-sm">   @Html.ActionLink("Quay Lại", "Index")</button>
                            <button class="btn btn-primary btn-sm" type="submit">Thêm Mới</button>
                        </div>
                    </div>
                </div>
            }
        </div>

    </div>
</div>


