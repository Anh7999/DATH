@model busproject2.Models.TuyenXe

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_MyLayout.cshtml";
}

<h2>Thêm Mới Tuyến Xe</h2>
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox ">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                <div class="ibox-content">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <form method="get">
                        <div class="form-group  row">
                            <label class="col-sm-2 col-form-label">Tên Tuyến</label>

                            <div class="col-sm-10">
                                @Html.EditorFor(model => model.TenTuyen, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.TenTuyen, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Thời Gian Bắt Đầu</label>
                            
                            <div class="col-sm-10">
                                <div class="input-group clockpicker" data-autoclose="true">
                                    @Html.EditorFor(model => model.ThoiGianBatDau, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.ThoiGianBatDau, "", new { @class = "text-danger" })
                                    <span class="input-group-addon">
                                        <span class="fa fa-clock-o"></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Thời Gian Kết Thúc</label>
                            <div class="col-sm-10">
                                <div class="input-group clockpicker" data-autoclose="true">
                                    @Html.EditorFor(model => model.ThoiGianKetThuc, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.ThoiGianKetThuc, "", new { @class = "text-danger"})
                                  
                                    <span class="input-group-addon">
                                        <span class="fa fa-clock-o"></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Loại Tuyến</label>

                            <div class="col-sm-10">
                                @Html.EditorFor(model => model.LoaiTuyen, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.LoaiTuyen, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                    </form>
                    <div class="form-group row">
                        <div class="col-sm-4 col-sm-offset-2">
                            <button class="btn btn-white btn-sm">   @Html.ActionLink("Quay Lại", "Index")</button>
                            <button class="btn btn-primary btn-sm" type="submit">Thêm Mới</button>
                        </div>
                    </div>
                </div>
                    }
                </div>

            </div>
        </div>
 
