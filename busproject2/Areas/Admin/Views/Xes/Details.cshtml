@model busproject2.Models.Xe

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_MyLayout.cshtml";
}



<h2>Chi Tiết Xe</h2>
<div class="row">
    <div class="col-lg-12">
        <div class="ibox ">
            <div class="ibox-content">

                <form method="get" style="margin-left:350px">
                    <div class="form-group  row">
                        <dt>
                            Tên Tài Xế
                        </dt>

                        <div class="col-sm-10" style="margin-left:60px">
                            @Html.DisplayFor(model => model.TaiXe.HoTen)
                        </div>
                    </div>

                    <div class="form-group row">

                        <dt>Tuyến Xe</dt>

                        <div class="col-sm-10" style="margin-left:10px">
                            @Html.DisplayFor(model => model.MaTuyen)
                        </div>
                    </div>

                    <div class="form-group row">
                        <dt>
                            Biển Số
                        </dt>
                        <div class="col-sm-10" style="margin-left:10px">
                            @Html.DisplayFor(model => model.BienSo)
                        </div>
                    </div>

                    <div class="form-group row">
                        <dt>
                            Tình Trạng Xe
                        </dt>

                        <div class="col-sm-10" style="margin-left:50px">
                            @Html.DisplayFor(model => model.TinhTrangXe)
                        </div>
                    </div>

                    <div class="form-group row">
                        <dt>
                            Lat
                        </dt>

                        <div class="col-sm-10" style="margin-left:50px">
                            @Html.DisplayFor(model => model.lat)
                        </div>
                    </div>

                    <div class="form-group row">
                        <dt>
                           Long
                        </dt>

                        <div class="col-sm-10" style="margin-left:50px">
                            @Html.DisplayFor(model => model._long)
                        </div>
                    </div>


                    <div class="form-group row">
                        <dt>
                            Loại Xe
                        </dt>

                        <div class="col-sm-10" style="margin-left:50px">
                            @Html.DisplayFor(model => model.LoaiXe)
                        </div>
                    </div>

                </form>
                <div class="form-group row">
                    <div class="col-sm-4 col-sm-offset-2">
                        <button class="btn btn-primary btn-sm">   @Html.ActionLink("Chỉnh Sửa Xe", "Edit", new { id = Model.MaXe })</button>
                        <button class="btn btn-white btn-sm" type="submit">  @Html.ActionLink("Quay Lại", "Index")</button>
                    </div>
                </div>
            </div>

        </div>

    </div>
</div>

