@using busproject2.Help
@model IEnumerable<busproject2.Models.TuyenXe>


@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_MyLayout.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h4>Quản Lý Tuyến Xe</h4>
                <p>
                    @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-plus'></span> Thêm Mới Tuyến Xe", "Create", "Create", "TuyenXes", routeValues: new { }, htmlAttributes: new { data_modal = "", @class = "btn btn-primary" })
                </p>
                </div>
              
                <div class="ibox-content">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover dataTables-example">
                            <thead>
                                <tr>

                                    <th>
                                        Tên Tuyến
                                    </th>
                                    <th>
                                        Thời Gian Bắt Đầu
                                    </th>
                                    <th>
                                        Thời Gian Kết Thúc
                                    </th>
                                    <th>
                                        Loại Tuyến
                                    </th>
                                    <th>
                                        Chức Năng
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.TenTuyen)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ThoiGianBatDau)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ThoiGianKetThuc)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.LoaiTuyen)
                                        </td>

                                        <td>
                                            @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-pencil'></span>", "Edit", "Edit", "TuyenXes", routeValues: new { id = item.MaTuyen }, htmlAttributes: new { data_modal = "", @class = "btn btn-default" })
                                            @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-zoom-in'></span>", "Detail", "Details", "TuyenXes", routeValues: new { id = item.MaTuyen }, htmlAttributes: new { data_modal = "", @class = "btn btn-primary" })
                                            @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-trash'></span>", "Delete", "Delete", "TuyenXes", routeValues: new { id = item.MaTuyen }, htmlAttributes: new { data_modal = "", @class = "btn btn-danger" })
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

