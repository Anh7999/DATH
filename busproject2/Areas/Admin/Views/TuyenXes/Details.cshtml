@model busproject2.Models.TuyenXe

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_MyLayout.cshtml";
}

<h2>Chi Tiết Tuyến Xe</h2>
<div class="row">
    <div class="col-lg-12">
        <div class="ibox ">
                <div class="ibox-content">
                  
                    <form method="get"  style="margin-left:350px">
                        <div class="form-group  row">
                            <dt>
                               Tên Tuyến
                            </dt>

                            <div class="col-sm-10" style="margin-left:60px">
                                @Html.DisplayFor(model => model.TenTuyen)
                            </div>
                        </div>
                     
                        <div class="form-group row">
                           
                            <dt>Thời Gian Bắt Đầu</dt>

                            <div class="col-sm-10" style="margin-left:10px">
                                @Html.DisplayFor(model => model.ThoiGianBatDau)
                            </div>
                        </div>
                       
                        <div class="form-group row" >
                            <dt>
                               Thời Gian Kết Thúc
                            </dt>
                            <div class="col-sm-10" style="margin-left:10px">
                                @Html.DisplayFor(model => model.ThoiGianKetThuc)
                            </div>
                        </div>
                       
                        <div class="form-group row">
                            <dt>
                               Loại Tuyến
                            </dt>

                            <div class="col-sm-10" style="margin-left:50px">
                                @Html.DisplayFor(model => model.LoaiTuyen)
                            </div>
                        </div>
                       
                    </form>
                    <div class="form-group row">
                        <div class="col-sm-4 col-sm-offset-2">
                            <button class="btn btn-primary btn-sm">   @Html.ActionLink("Chỉnh Sửa Tuyến Xe", "Edit", new { id = Model.MaTuyen })</button>
                            <button class="btn btn-white btn-sm" type="submit">  @Html.ActionLink("Quay Lại", "Index")</button>
                        </div>
                    </div>
                </div>
          
        </div>

    </div>
</div>

