@using busproject2.Help
@model IEnumerable<busproject2.Models.VeXe>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_MyLayout.cshtml";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h4>Quản Lý Vé Xe</h4>
                    <p>
                        @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-plus'></span> Thêm Mới Vé Xe", "Create", "Create", "VeXes", routeValues: new { }, htmlAttributes: new { data_modal = "", @class = "btn btn-primary" })
                    </p>
                </div>

                <div class="ibox-content">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover dataTables-example">
                            <thead>
                                <tr>

                                    <th>
                                      Loại Vé
                                    </th>
                                    <th>
                                       Giá
                                    </th>
                                    <th>
                                        Chức Năng
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.LoaiVe)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Gia)
                                    </td>

                                    <td>
                                        @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-pencil'></span>", "Edit", "Edit", "VeXes", routeValues: new { id = item.MaVe }, htmlAttributes: new { data_modal = "", @class = "btn btn-default" })
                                        @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-zoom-in'></span>", "Detail", "Details", "VeXes", routeValues: new { id = item.MaVe }, htmlAttributes: new { data_modal = "", @class = "btn btn-primary" })
                                        @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-trash'></span>", "Delete", "Delete", "VeXes", routeValues: new { id = item.MaVe }, htmlAttributes: new { data_modal = "", @class = "btn btn-danger" })
                                    </td>
                                </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>


