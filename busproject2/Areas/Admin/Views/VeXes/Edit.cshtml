@model busproject2.Models.VeXe

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_MyLayout.cshtml";
}

<h2>Chỉnh Sửa Vé Xe</h2>
<div class="row">
    <div class="col-lg-12">
        <div class="ibox ">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
            <div class="ibox-content">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.MaVe)
                <form method="get">
                    <div class="form-group  row">
                        <label class="col-sm-2 col-form-label">Loại Vé</label>

                        <div class="col-sm-10">
                            @Html.EditorFor(model => model.LoaiVe, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.LoaiVe, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Lương</label>
                        <div class="col-sm-10">
                            @Html.EditorFor(model => model.Gia, new { htmlAttributes = new { @class = "form-control", @type = "text" } })
                            @Html.ValidationMessageFor(model => model.Gia, "", new { @class = "text-danger" })

                            <span class="form-text">99,999,999 VND</span>
                        </div>
                    </div>

                </form>
                <div class="form-group row">
                    <div class="col-sm-4 col-sm-offset-2">
                        <button class="btn btn-white btn-sm">  @Html.ActionLink("Quay Lại", "Index")</button>
                        <button class="btn btn-primary btn-sm" type="submit">Lưu Thay Đổi</button>
                    </div>
                </div>
            </div>
            }
        </div>

    </div>
</div>
